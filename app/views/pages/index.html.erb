<%= link_to("<<Back to Subjects",{:controller => 'subjects', :action => 'index'}, :class => 'back-link')%>
<div class="pages index">
<h2>Pages</h2>
<%=  link_to("Add new page",{:action => 'new'},:class => 'action new') %>
<table>
	<tr class="header">
		<th>&nbsp;&nbsp;</th>
		<th>Subject</th>
		<th>Page</th>
		<th>Permalink</th>
		<th>Visible</th>
		<th>Sections</th>
		<th>Actions</th>
	</tr>
    <% @pages.each do |page| %>
    <tr class="<%= cycle('odd','even') %>">
    	<td class="center"><%= page.position %></td>
    	<td class="center"><%= page.subject.name if page.subject %></td>
    	<td><%= page.name %></td>
    	<td ><%= page.permalink %></td>
    	<td class="center"><%= status_tag(page.visible) %></td>
    	<td class="center"><%= page.sections.size %></td>
    	<td class="actions">
    	  <%= link_to("Show",{:action => 'show' , :id => page.id},:class => 'action show') %>
    	  <%= link_to("Edit",{:action => 'edit' , :id => page.id},:class => 'action edit') %>
    	  <%= link_to("Delete",{:action => 'delete' , :id => page.id},:class => 'action delete') %>
    	  </td>
    </tr>
    <% end %>
</table>
</div>